= provide(:title, "Campaigns")

%p#notice= notice

.jumbotron.campaigndetails
  %h1= @campaign.name
  %p= @campaign.description
  %ul
  %li
    = @result

  - if !@dash.nil?
    %li
      = @dash.name
    %li
      = @dash.users.first.name
    %li
      = @user

.hoster
  %h2= "#{@user.name} runs this..."
  %br
  = link_to "Join", join_campaign_path(@campaign), :class => "btn xs-btn"

  %br

.players
  %h2 
    Player List
  - if @pplayers.count > 0
    = render partial: 'shared/player_list', locals: { list: @pplayers }
    = will_paginate @pplayers

  - else
    %p
      No players signed yet...

.countries
  %h2
    Countries List
  - if @ccountries.count > 0
    %table{:class => "table table-striped table-hover"}
      %tbody
      - @ccountries.each do |joinedc|
        %tr
          %td= joinedc.country.name
          %td= link_to "Show", country_url(joinedc.country)
          %td= link_to "Edit", edit_country_url(joinedc.country.id)
      = will_paginate @ccountries

  - else
    %p
      No countries found...
%p= link_to 'Edit', edit_campaign_path(@campaign), :class => "btn xs-btn"
