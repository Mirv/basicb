= provide(:title, "Players")

%h1 Your players

%table{:class => "table table-striped table-hover"}
  %thead
    %tr
      %th Screen Name
      %th Motto
      %th Country
      %th
      %th
      %th
      %th
  %tbody
    - @playerlist.each do |play|
      %tr
        %td= play.screenname
        %td= play.motto
        %td= play.country_id
        // %td= player.country_name
        %td= link_to 'Show', play, :class => "btn btn-default btn-xs" 
        %td= link_to 'Edit', edit_player_path(play), :class => "btn btn-default btn-xs" 
        %td= link_to 'Destroy', play, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-default btn-xs"
        %td= play.userplay.user_id

%br

%h1 Listing all players

%table{:class => "table table-striped table-hover"}
  %thead
    %tr
      %th Screen Name
