= provide(:title, "Players")

%h1 Your players
.list-group
  - if @user_players.count > 0
  
    = render partial: 'shared/lister_all', locals: { the_list: @user_players }

    = will_paginate @players
    
  - else
    .my-well
      %li No players found.

%br

%h1 Listing all players
.list-group
  - if @players.count > 0
  
    = will_paginate @players
    
    = render partial: 'shared/lister_all', locals: { the_list: @players }
    
    = will_paginate @players
    
  - else
  
    %li No players found

%br

= link_to 'New Player', new_player_path,:class => "btn btn-md btn-default"
