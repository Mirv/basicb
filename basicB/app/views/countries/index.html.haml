%h1 Listing countries

%table{:class => "table table-striped table-hover"}
  %thead
    %tr
      %th ID
      %th Name
      %th Description
      %th Size
      %th Options ...
      %th
      %th
      %th Add Neighbors
      
  %tbody
    - for country in @countries
      %tr
        %td= country.id
        %td= country.name
        %td= country.description
        %td= country.size
        %td= link_to 'Show', country
        %td= link_to 'Edit', edit_country_path(country)
        %td= link_to 'Destroy', country, :method => :delete, :data => { :confirm => 'Are you sure?' }
        %td= link_to 'Add Neighbors', :neighborhoods 
      - if country.states.count > 0
        %tr
          %td
          %td
          %td State Name
        - for state in country.states
          %tr
            %td
            %td= state.name
            %td
            %td
            %td
            %td
      - if country.neighbors.count > 0
        - for neighbor in country.neighbors
          %tr
            %td
            %td
            %td
            %td
              = neighbor.id
            %td
              = neighbor.name
            %td
              // = neighbor.neighbor_id
            %td
              Neighbor
        %td
        %td
        %td
        %td

