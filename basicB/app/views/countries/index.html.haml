= provide(:title, "Countries")
%h1 Listing countries

%table{:class => "table table-striped table-hover"}
  %thead
    %tr
      %th ID
      %th Name
      %th Description
      %th Size
      %th Options ...
      %th
      %th
      %th Add Neighbors
  %tbody
    - for country in @countries
      %tr
        %td= country.id
        %td= country.name
        %td= country.description
        %td= country.size
        .btn-group-xs	
          // %td= render partial: 'shared/interact_options', locals: { interact_item: @country }
          %td= link_to 'Add Neighbors', :neighborhoods, :class => "btn btn-default btn-xs" 
      - if country.states.count > 0
        %tr
          %td
          %td
          %td State Name
        - for state in country.states
          %tr
            %td
            %td= state.name
            %td
            %td
            %td
            %td
      - if country.neighbors.count > 0
        - for neighbor in country.neighbors
          %tr
            %td
            %td
            %td
            %td
              = neighbor.id
            %td
              = neighbor.name
            %td
              // = neighbor.neighbor_id
            %td
              Neighbor
        %td
        %td
        %td
        %td
        %td
        %td

